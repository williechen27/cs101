#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {
    int a[] = {0, 1, 2};
    char b[] = "ABC";
    float c[] = {1.1, 1.2, 1.3};
    int na = 3, nb = 3, nc = 3;
    FILE *fp;

    /* 寫入二進位檔 */
    fp = fopen("a.bin", "wb");
    fwrite(a, sizeof(int), na, fp);
    fwrite(b, sizeof(char), nb, fp);
    fwrite(c, sizeof(float), nc, fp);
    fclose(fp);

    /* 讀回檔案 */
    int ra[3];
    char rb[3];
    float rc[3];
    fp = fopen("a.bin", "rb");
    fread(ra, sizeof(int), na, fp);
    fread(rb, sizeof(char), nb, fp);
    fread(rc, sizeof(float), nc, fp);
    fclose(fp);

    /* 輸出結果 */
    for (int i = 0; i < na; i++) printf("%d ", ra[i]);
    printf("\n");
    for (int i = 0; i < nb; i++) printf("%c ", rb[i]);
    printf("\n");
    for (int i = 0; i < nc; i++) printf("%f ", rc[i]);
    printf("\n");
}
